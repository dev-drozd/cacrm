<div class="order" id="order_{id}">
	<div class="o-id">
		{id}
	</div>
	<div class="o-date">
		{date}
	</div>
	<div class="o-price">
		{currency}{total}
	</div>
	<div class="o-checkout">
		{delivery}
	</div>
	<div class="o-delivery">
		<span class="status-active" style="background: {status-color};">{status}</span>
	</div>
</div>