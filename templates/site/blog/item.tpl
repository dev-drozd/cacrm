<article class="blog-single">
	<h2><a href="/blog/[pathname]{pathname}[not-pathname]{id}[/pathname]" onclick="Page.get(this.href);return false;">{name}</a></h2>
	[image]<a href="#" class="blog-mini-image"><img src="{image}"></a>[/image]
	<div class="blog-info">
		<div class="bi-categories">
			<span class="fa fa-tag"></span>
			{categories}
		</div>
		<div class="bi-text">
			{content}
		</div>
		<div class="bi-date">
			{date}
		</div>
	</div>
	<div>
		<div class="line"></div>
	</div>
</article>