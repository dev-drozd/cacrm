<div class="tr">
	<div class="td w50 lh45">
		<a href="/users/view/{user-id}" target="_blank">
			[ava]
				<img src="/uploads/images/users/{user-id}/thumb_{image}" class="miniRound">
			[not-ava]
				<span class="fa fa-user-secret miniRound"></span>
			[/ava]
			{name} {lastname}
		</a>
	</div>
	<div class="td w125 pPoints"><span class="thShort">Working time: </span>{seconds}</div>
	<div class="td w125 pPoints"><span class="thShort">Points per hour: </span>{per_hour}</div>
	<div class="td w125 pPoints"><span class="thShort">Staff points: </span>{points}</div>
	<div class="td w125 pPoints"><span class="thShort">Store points: </span>{store_points}</div>
	<div class="td w125 pPoints"><span class="thShort">Total points: </span>{total_points}</div>
</div>