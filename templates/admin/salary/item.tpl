<div class="tr">
	<div class="td wp20 lh45">
		<a href="/users/view/{user-id}" target="_blank">
			[ava]
				<img src="/uploads/images/users/{user-id}/thumb_{image}" class="miniRound">
			[not-ava]
				<span class="fa fa-user-secret miniRound"></span>
			[/ava]
			{name} {lastname}
		</a>
	</div>
	<div class="td w125"><span class="thShort">Store: </span>{store}</div>
	<div class="td w125"><span class="thShort">Date: </span>{date}</div>
	<div class="td w125"><span class="thShort">Working time: </span>{seconds}</div>
	<div class="td w125"><span class="thShort">Salary: </span>${pay}</div>
	<div class="td w125"><span class="thShort">On site Salary: </span>{onsite}</div>
	<div class="td w125"><span class="thShort">Total: </span>$ {total}</div>
</div>