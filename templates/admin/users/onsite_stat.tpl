<div class="onsite_stat">
	<span class="fa fa-{icon} onsite_event"></span>
	<div class="dClear">
		<div class="usrname">
			<a href="/users/view/{user_id}">
				[image]
					<img src="/uploads/images/users/{user_id}/thumb_{image}" class="miniRound">
				[not-image]
					<span class="fa fa-user-secret miniRound"></span>
				[/image]
			{name} {lastname} </a>
		</div>
		<div class="date">{date}</div>
	</div>
	<div class="onsite_text">
		<ul>
			<li><b>Event:</b> {event}</li>
			<li><b>Store:</b> {object}</li>
			<li><b>Used time:</b> {used_time}</li>
		</ul>
		{note}
	</div>
</div>